        self.alert_label.setAlignment(Qt.AlignCenter)
        self.alert_label.setStyleSheet(global_font + "font-size: 12pt; color: white; background-color: #2c2c2c;")
        grid.addWidget(self.alert_label, 3, 0, 1, 4)
