####################################################################################################
# FINAL_SETTLEMENT_SYSTEM.PY (저장11 – 최종 수정본 Revised v7.3.4a)
# 제작자: ChatGPT
# 작성일: 2025-02-17
#
# [변경 사항]
# 1. "정산 결과" 아래에 자동으로 "정상" 또는 "비정상" (차이값 포함) 메시지가 출력됨.
# 2. 두 박스를 하나로 합쳐 "자동 정산 시스템"이라는 단일 제목(상단 왼쪽, 빨간색, 13pt)으로 표시됨.
# 3. 각 사이트의 행에는 사이트명, 자동 업데이트 필드, 수정 버튼, OTP 입력 필드, 전송 버튼이 한 행에 배치됨.
# 4. OTP 입력 필드와 전송 버튼은 기본적으로 숨김 처리되며, 로그인 버튼 클릭 후 지정된 OTP xpath가 감지되면 animate_otp()를 통해 나타나며,
#    하단의 error_label에 "OTP 를 입력해주세요"가 표시됨.
# 5. 사용자가 "전송" 버튼을 누르면 해당 사이트의 OTP 값이 저장되고, OTP 입력 필드와 전송 버튼은 즉시 숨겨짐.
# 6. 만약 자동화 과정에서 오류가 발생하면, 각 사이트의 실패 상태가 self.error_status에 기록되고, update_error_label()을 통해 
#    "자동화 연동 실패: [사이트명]"과 같이 실시간으로 표시됨.
# 7. 동일한 드라이버(브라우저 창)를 재사용하여 작업을 계속함.
####################################################################################################

import sys, os, time, re, atexit, subprocess
from datetime import datetime
import openpyxl

from PyQt5.QtWidgets import (
    QApplication, QWidget, QVBoxLayout, QLineEdit, QPushButton, QLabel,
    QMainWindow, QMessageBox, QHBoxLayout, QStackedWidget, QGroupBox, QGridLayout,
    QGraphicsOpacityEffect, QFormLayout, QInputDialog
)
from PyQt5.QtCore import Qt, QTimer, QPropertyAnimation, pyqtSignal, QThread, QUrl
from PyQt5.QtGui import QGuiApplication, QDesktopServices
from PyQt5.QtWebEngineWidgets import QWebEngineView

global_font = "font-family: 'Malgun Gothic', sans-serif;"

from selenium import webdriver
from selenium.webdriver.chrome.service import Service
from selenium.webdriver.common.by import By
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC
from selenium.webdriver.common.keys import Keys
from webdriver_manager.chrome import ChromeDriverManager

####################################################################################################
# Chrome 드라이버 생성 helper 함수
####################################################################################################
def create_chrome_driver(options, retries=3):
    for i in range(retries):
        try:
            driver = webdriver.Chrome(service=Service(ChromeDriverManager().install()), options=options)
            return driver
        except Exception as e:
            print(f"Chrome 드라이버 초기화 오류 (시도 {i+1}/{retries}): {e}")
            time.sleep(2)
    return None

non_headless_options = webdriver.ChromeOptions()  # visible mode

####################################################################################################
# Copyable 위젯 클래스
####################################################################################################
class CopyableLineEdit(QLineEdit):
    def mousePressEvent(self, event):
        QGuiApplication.clipboard().setText(self.text())
        super().mousePressEvent(event)

class CopyableLabel(QLabel):
    def mousePressEvent(self, event):
        QGuiApplication.clipboard().setText(self.text())
        super().mousePressEvent(event)

####################################################################################################
# 숫자 포맷 함수
####################################################################################################
def format_number(value):
    try:
        num = float(value.replace(",", "").strip())
        return f"{num:,.0f}"
    except Exception:
        return value

####################################################################################################
# SiteAutomationThread: 사이트별 로그인 자동화 및 크롤링 (reusing same driver)
####################################################################################################
class SiteAutomationThread(QThread):
    automation_complete = pyqtSignal(str)
    otp_ready = pyqtSignal(str)   # Signal to show OTP fields
    otp_hide = pyqtSignal(str)    # Signal to hide OTP fields after processing
    def __init__(self, config, parent=None):
        super().__init__(parent)
        self.config = config
    def run(self):
        driver = create_chrome_driver(non_headless_options)
        if not driver:
            self.automation_complete.emit("Driver Init Failed")
            return
        driver.maximize_window()
        while True:
            try:
                driver.get(self.config['login_url'])
                WebDriverWait(driver, 30).until(
                    EC.presence_of_element_located((By.XPATH, self.config['login_id_xpath']))
                )
                print(f"[{self.config['site_name']}] 로그인 URL 오픈 완료")
                time.sleep(2)
                id_field = driver.find_element(By.XPATH, self.config['login_id_xpath'])
                id_field.clear()
                id_field.send_keys(self.config['login_id'])
                print(f"[{self.config['site_name']}] 아이디 입력")
                pw_field = driver.find_element(By.XPATH, self.config['login_pw_xpath'])
                pw_field.clear()
                pw_field.send_keys(self.config['login_pw'])
                print(f"[{self.config['site_name']}] 비밀번호 입력")
                login_btn = driver.find_element(By.XPATH, self.config['login_button_xpath'])
                login_btn.click()
                print(f"[{self.config['site_name']}] 로그인 버튼 클릭")
                WebDriverWait(driver, 30).until(
                    EC.presence_of_element_located((By.XPATH, self.config['otp_xpath']))
                )
                print(f"[{self.config['site_name']}] OTP 입력창 발견")
                self.otp_ready.emit(self.config['site_name'])
                start_time = time.time()
                while self.config.get('otp_value', '') == '':
                    if time.time() - start_time > 30:
                        print(f"[{self.config['site_name']}] OTP 입력 시간 초과")
                        break
                    time.sleep(0.5)
                otp_to_send = self.config.get('otp_value', '')
                if otp_to_send != '':
                    otp_field = driver.find_element(By.XPATH, self.config['otp_xpath'])
                    otp_field.clear()
                    otp_field.send_keys(otp_to_send + Keys.ENTER)
                    print(f"[{self.config['site_name']}] OTP 제출: {otp_to_send}")
                    self.config['otp_value'] = ''
                else:
                    print(f"[{self.config['site_name']}] OTP 값이 입력되지 않음")
                time.sleep(2)
                driver.get(self.config['post_login_url'])
                WebDriverWait(driver, 30).until(
                    EC.presence_of_element_located((By.XPATH, self.config['click_xpath1']))
                )
                print(f"[{self.config['site_name']}] post_login_url 전환 완료")
                time.sleep(2)
                driver.find_element(By.XPATH, self.config['click_xpath1']).click()
                print(f"[{self.config['site_name']}] XPath 1 클릭")
                time.sleep(1)
                driver.find_element(By.XPATH, self.config['click_xpath2']).click()
                print(f"[{self.config['site_name']}] XPath 2 클릭")
                time.sleep(1)
                driver.find_element(By.XPATH, self.config['click_xpath3']).click()
                print(f"[{self.config['site_name']}] XPath 3 클릭")
                time.sleep(1)
                final_elem = driver.find_element(By.XPATH, self.config['final_crawl_xpath'])
                final_data = final_elem.text
                print(f"[{self.config['site_name']}] 최종 크롤링 데이터: {final_data}")
                self.automation_complete.emit(final_data)
            except Exception as e:
                print(f"SiteAutomationThread ({self.config['site_name']}) 오류:", e)
                self.automation_complete.emit("Automation Error")
            finally:
                self.otp_hide.emit(self.config['site_name'])
            time.sleep(10)

####################################################################################################
